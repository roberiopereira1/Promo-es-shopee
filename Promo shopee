        let cart = [];
        let currentCategory = 'todos';
        let searchTerm = '';

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            renderProducts();
            
            // Search functionality
            document.getElementById('search-input').addEventListener('input', (e) => {
                searchTerm = e.target.value.toLowerCase();
                renderProducts();
            });
        });

        function renderProducts() {
            const grid = document.getElementById('products-grid');
            let filtered = products;

            // Filter by category
            if (currentCategory !== 'todos') {
                filtered = filtered.filter(p => p.category === currentCategory);
            }

            // Filter by search
            if (searchTerm) {
                filtered = filtered.filter(p => 
                    p.name.toLowerCase().includes(searchTerm) || 
                    p.shop.toLowerCase().includes(searchTerm)
                );
            }

            // Sort
            const sortValue = document.getElementById('sort-select').value;
            if (sortValue === 'commission') {
                filtered.sort((a, b) => b.commission - a.commission);
            } else if (sortValue === 'price-asc') {
                filtered.sort((a, b) => a.price - b.price);
            } else if (sortValue === 'price-desc') {
                filtered.sort((a, b) => b.price - a.price);
            } else {
                filtered.sort((a, b) => b.sales - a.sales);
            }

            grid.innerHTML = filtered.map(product => `
                <div class="product-card bg-surface rounded-2xl overflow-hidden border border-white/10 hover:border-primary/30 group">
                    <div class="relative overflow-hidden aspect-square">
                        <img src="${product.image}" alt="${product.name}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-between p-4">
                            <button onclick="openProductModal(${product.id})" class="bg-white/20 backdrop-blur-md hover:bg-white/30 text-white px-4 py-2 rounded-full text-sm font-medium transition-colors">
                                Ver Detalhes
                            </button>
                        </div>
                        <div class="absolute top-3 left-3 bg-primary text-white text-xs font-bold px-2 py-1 rounded-lg">
                            -${Math.round((1 - product.price/product.originalPrice) * 100)}%
                        </div>
                    </div>
                    
                    <div class="p-5">
                        <div class="flex items-center justify-between mb-2">
                            <span class="text-xs text-gray-400 uppercase tracking-wider">${getCategoryName(product.category)}</span>
                            <div class="flex items-center text-yellow-400 text-xs">
                                <i class="fas fa-star mr-1"></i>
                                <span>${product.rating}</span>
                            </div>
                        </div>
                        
                        <h3 class="font-semibold text-lg mb-2 line-clamp-2 group-hover:text-primary transition-colors cursor-pointer" onclick="openProductModal(${product.id})">
                            ${product.name}
                        </h3>
                        
                        <p class="text-gray-500 text-sm mb-3">${product.shop}</p>
                        
                        <div class="flex items-end justify-between mb-4">
                            <div>
                                <div class="text-2xl font-bold text-white">R$ ${product.price.toFixed(2)}</div>
                                <div class="text-sm text-gray-500 line-through">R$ ${product.originalPrice.toFixed(2)}</div>
                            </div>
                            <div class="text-right">
                                <div class="text-xs text-gray-400">Comissão</div>
                                <div class="text-primary font-bold">R$ ${product.commission.toFixed(2)}</div>
                            </div>
                        </div>
                        
                        <div class="flex gap-2">
                            <button onclick="addToCart(${product.id})" class="flex-1 bg-white/5 hover:bg-primary hover:text-white border border-white/10 hover:border-primary text-gray-300 py-3 rounded-xl font-medium transition-all flex items-center justify-center gap-2 group/btn">
                                <i class="far fa-heart group-hover/btn:fas"></i>
                                Salvar
                            </button>
                            <a href="${product.link}" target="_blank" class="flex-1 shopee-gradient py-3 rounded-xl font-medium text-center hover:shadow-lg hover:shadow-primary/25 transition-all">
                                Ver na Shopee
                            </a>
                        </div>
                    </div>
                </div>
            `).join('');

            if (filtered.length === 0) {
                grid.innerHTML = `
                    <div class="col-span-full text-center py-20">
                        <i class="fas fa-search text-4xl text-gray-600 mb-4"></i>
                        <p class="text-gray-400">Nenhum produto encontrado</p>
                    </div>
                `;
            }
        }

        function getCategoryName(cat) {
            const names = {
                'tecnologia': 'Tecnologia',
                'moda': 'Moda',
                'casa': 'Casa',
                'beleza': 'Beleza',
                'esportes': 'Esportes'
            };
            return names[cat] || cat;
        }

        function filterCategory(category) {
            currentCategory = category;
            
            // Update active state
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active', 'border-primary');
                btn.classList.add('border-white/10');
            });
            event.currentTarget.classList.add('active', 'border-primary');
            event.currentTarget.classList.remove('border-white/10');
            
            renderProducts();
        }

        function sortProducts() {
            renderProducts();
        }

        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            if (!cart.find(item => item.id === productId)) {
                cart.push(product);
                updateCartUI();
                showToast(`${product.name.substring(0, 30)}... adicionado aos favoritos!`);
            } else {
                showToast('Produto já está nos favoritos!');
            }
        }

        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            updateCartUI();
        }

        function updateCartUI() {
            const count = document.getElementById('cart-count');
            const items = document.getElementById('cart-items');
            const totalItems = document.getElementById('cart-total-items');
            const totalCommission = document.getElementById('cart-total-commission');
            
            count.textContent = cart.length;
            count.classList.toggle('hidden', cart.length === 0);
            
            totalItems.textContent = cart.length;
            const total = cart.reduce((sum, item) => sum + item.commission, 0);
            totalCommission.textContent = `R$ ${total.toFixed(2)}`;
            
            if (cart.length === 0) {
                items.innerHTML = `
                    <div class="text-center text-gray-500 mt-20">
                        <i class="fas fa-heart text-4xl mb-4 opacity-50"></i>
                        <p>Você ainda não tem produtos favoritos</p>
                        <button onclick="toggleCart(); scrollToSection('produtos')" class="mt-4 text-primary hover:underline">
                            Explorar produtos
                        </button>
                    </div>
                `;
            } else {
                items.innerHTML = cart.map(item => `
                    <div class="flex gap-4 bg-white/5 p-4 rounded-xl border border-white/10">
                        <img src="${item.image}" class="w-20 h-20 object-cover rounded-lg">
                        <div class="flex-1">
                            <h4 class="font-medium text-sm mb-1 line-clamp-2">${item.name}</h4>
                            <p class="text-primary text-sm font-bold mb-2">R$ ${item.commission.toFixed(2)} comissão</p>
                            <div class="flex gap-2">
                                <button onclick="copyLink('${item.link}')" class="text-xs bg-white/10 hover:bg-white/20 px-3 py-1 rounded-full transition-colors">
                                    <i class="fas fa-link mr-1"></i> Copiar Link
                                </button>
                                <button onclick="removeFromCart(${item.id})" class="text-xs text-red-400 hover:text-red-300 px-2 py-1">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `).join('');
            }
        }

        function toggleCart() {
            const sidebar = document.getElementById('cart-sidebar');
            const panel = document.getElementById('cart-panel');
            
            if (sidebar.classList.contains('hidden')) {
                sidebar.classList.remove('hidden');
                setTimeout(() => {
                    panel.classList.remove('translate-x-full');
                }, 10);
            } else {
                panel.classList.add('translate-x-full');
                setTimeout(() => {
                    sidebar.classList.add('hidden');
                }, 300);
            }
        }

        function openProductModal(productId) {
            const product = products.find(p => p.id === productId);
            const modal = document.getElementById('product-modal');
            const content = document.getElementById('modal-content');
            
            content.innerHTML = `
                <div class="relative h-64 md:h-full bg-gray-900">
                    <img src="${product.image}" class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-gradient-to-t from-surface to-transparent md:hidden"></div>
                </div>
                <div class="p-8 md:p-12">
                    <div class="flex items-center gap-2 mb-4">
                        <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium">${getCategoryName(product.category)}</span>
                        <span class="text-gray-400 text-sm"><i class="fas fa-star text-yellow-400 mr-1"></i>${product.rating} (${product.sales.toLocaleString()} vendas)</span>
                    </div>
                    
                    <h2 class="text-3xl font-bold mb-4">${product.name}</h2>
                    <p class="text-gray-400 mb-6">Vendido por <span class="text-white font-medium">${product.shop}</span></p>
                    
                    <div class="flex items-end gap-4 mb-6">
                        <div class="text-4xl font-bold text-white">R$ ${product.price.toFixed(2)}</div>
                        <div class="text-xl text-gray-500 line-through mb-1">R$ ${product.originalPrice.toFixed(2)}</div>
                        <div class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm font-bold mb-2">
                            ${Math.round((1 - product.price/product.originalPrice) * 100)}% OFF
                        </div>
                    </div>
                    
                    <div class="bg-primary/5 border border-primary/20 rounded-2xl p-6 mb-8">
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-gray-400">Sua comissão por venda:</span>
                            <span class="text-2xl font-bold text-primary">R$ ${product.commission.toFixed(2)}</span>
                        </div>
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-gray-500">Taxa de conversão estimada:</span>
                            <span class="text-gray-300">3-5%</span>
                        </div>
                    </div>
                    
                    <div class="space-y-3">
                        <button onclick="addToCart(${product.id}); closeProductModal()" class="w-full shopee-gradient py-4 rounded-xl font-bold text-lg hover:shadow-lg hover:shadow-primary/25 transition-all flex items-center justify-center gap-2">
                            <i class="fas fa-heart"></i>
                            Adicionar aos Favoritos
                        </button>
                        <a href="${product.link}" target="_blank" class="block w-full bg-white/5 hover:bg-white/10 border border-white/10 text-center py-4 rounded-xl font-medium transition-colors">
                            Ver na Shopee <i class="fas fa-external-link-alt ml-2"></i>
                        </a>
                    </div>
                    
                    <div class="mt-8 pt-8 border-t border-white/10">
                        <h4 class="font-bold mb-4">Como promover este produto:</h4>
                        <ul class="space-y-2 text-gray-400 text-sm">
                            <li class="flex items-start gap-2">
                                <i class="fas fa-check-circle text-primary mt-1"></i>
                                <span>Copie seu link de afiliado exclusivo</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <i class="fas fa-check-circle text-primary mt-1"></i>
                                <span>Compartilhe nas redes sociais com fotos reais</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <i class="fas fa-check-circle text-primary mt-1"></i>
                                <span>Crie conteúdo mostrando o uso do produto</span>
                            </li>
                        </ul>
                    </div>
                </div>
            `;
            
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeProductModal() {
            const modal = document.getElementById('product-modal');
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }

        function copyLink(link) {
            navigator.clipboard.writeText(link).then(() => {
                showToast('Link copiado para a área de transferência!');
            });
        }

        function copyAllLinks() {
            if (cart.length === 0) return;
            const links = cart.map(item => `${item.name}: ${item.link}`).join('\n');
            navigator.clipboard.writeText(links).then(() => {
                showToast('Todos os links copiados!');
            });
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            document.getElementById('toast-message').textContent = message;
            toast.classList.remove('translate-y-20', 'opacity-0');
            
            setTimeout(() => {
                toast.classList.add('translate-y-20', 'opacity-0');
            }, 3000);
        }

        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        }

        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        function loadMoreProducts() {
            showToast('Em um site real, mais produtos seriam carregados da API da Shopee');
        }

        // Close modal on escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeProductModal();
                if (!document.getElementById('cart-sidebar').classList.contains('hidden')) {
                    toggleCart();
                }
            }
        });
    </script>
</body>
</html>
